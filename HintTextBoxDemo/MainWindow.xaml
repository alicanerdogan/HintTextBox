<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HintTextBoxDemo"
        xmlns:HintTextBox="clr-namespace:HintTextBox;assembly=HintTextBox" x:Class="HintTextBoxDemo.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <HintTextBox:HintTextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Hint="Some hint" FontSize="20" VerticalAlignment="Top" Height="77" Width="250"
                                 BorderThickness="0,0,0,5" BorderBrush="Black"/>
        <HintTextBox:HintTextBox HorizontalAlignment="Left" Margin="10,92,0,0" TextWrapping="Wrap" Hint="Name" HintForeground="Coral" FontSize="14" VerticalAlignment="Top" Width="139"
                                 BorderThickness="1" BorderBrush="Black" />
        <HintTextBox:HintTextBox HorizontalAlignment="Left" Margin="10,122,0,0" TextWrapping="Wrap" Hint="Password" HintForeground="Coral" FontSize="14" VerticalAlignment="Top" Width="139"
                                 BorderThickness="1" BorderBrush="Black" />
    </Grid>
</Window>
